<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
           http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>

        <service id="bookbundle.user.register.type"
                class="BookBundle\Form\RegistrationType">
            <tag name="form.type" />
        </service>

        <service id="bookbundle.entity.repository"
                factory-service="doctrine.orm.default_entity_manager"
                factory-method="getRepository"
                abstract="true">
        </service>

        <service id="bookbundle.user.entity.repository"
                class="BookBundle\Repository\UserRepository"
                parent="bookbundle.entity.repository">
            <argument>BookBundle\Entity\User</argument>
        </service>

    </services>
</container>
